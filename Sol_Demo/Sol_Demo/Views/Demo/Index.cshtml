<form id="frmMain">
    <div class="container">
        <div class="row">
            <div class="col-6">
                <jQuery-Listbox item-source="Model"
                                on-selected-index="2"
                                on-getitem-button-id="btnSelected"
                                displayitem-id="h2DisplayItem"></jQuery-Listbox>
            </div>
            <div class="col-6">
                <h2 id="h2DisplayItem"></h2>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <hr />
                <button id="btnSelected" class="btn btn-danger" onclick="onSelectedItem(); return false;">Get Selected Value</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {

    @{
        await Html.RenderPartialAsync("~/Views/Shared/_JqueryListBoxJavascriptPartialView.cshtml");
    }

    <script type="text/javascript">

        function onSelectedItem() {
            $("#frmMain").attr("method", "post");
            $("#frmMain").attr("action", '@Url.Action("OnItemSelected","Demo")');
            $("#frmMain").submit();

        }
    </script>

}